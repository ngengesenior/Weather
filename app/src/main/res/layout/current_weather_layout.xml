<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   app:contentPadding="12dp"
                                                   app:cardBackgroundColor="@color/colorPrimary"
                                                   app:cardCornerRadius="12dp"
                                                   app:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="20\u00B0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTemperature" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textAppearance="@style/AppTheme.LargeTextView" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp"/>
        <TextView
                android:text="Rain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewCondition" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintTop_toBottomOf="@+id/textViewTemperature"
                android:layout_marginTop="16dp" android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp" app:srcCompat="@drawable/ic_icons_rain_cloud"
                android:id="@+id/imageViewCondition"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp" app:layout_constraintTop_toBottomOf="@+id/textViewCondition"
                android:layout_marginTop="16dp"/>
        <TextView
                android:text="Humidity 35%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewHumidity"
                app:layout_constraintTop_toBottomOf="@+id/imageViewCondition" android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@+id/guideline"
        />
        <TextView
                android:text="Wind 4km/hr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewWind" app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/textViewHumidity" android:layout_marginTop="16dp"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guideline" app:layout_constraintGuide_begin="12dp"
                                                    android:orientation="vertical"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>